{
    "manifest_version": 3,
    "name": "Text Rewriter MVP",
    "version": "1.0",
    "description": "Expand, reduce, or rewrite text with different tones.",
    "permissions": [
      "contextMenus",
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": ["result.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  